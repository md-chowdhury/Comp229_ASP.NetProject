                <thead>
                    <tr>

                        <th class="text-center">Recipe ID </th>
                        <th>RecipeName</th>
                        <th>Category</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Recipe reci in Model.Recipes)
