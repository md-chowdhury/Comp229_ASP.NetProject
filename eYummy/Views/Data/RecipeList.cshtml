                            <td class="text-center">@Model.Recipe.RecipeId</td>
                            <td>@Model.Recipe.RecipeTitle </td>
                            <td>


                                @foreach (Category category in Model.Categories)
                                {
                                    @if (Model.Recipe.CategoryId == category.CategoryId)
                                    {
                                        @category.CategoryName

                                    }

                                }

                            </td>


