    <!-- END RECIPE DETAILS -->
    <!-- -->
    <!-- Typography -->

    <div class="section">
        <div class="container">

            <!-- User ratings -->




            <div id="images">
                <h4>Reviews &hearts; </h4>

                <div class="row">
                    <div class="col-sm-2">
                        <i class="now-ui-icons ui-2_like"></i>

                        <span class="progress-value">
                            @Model.cntRecipeReviewComments
                            <!-- Button trigger modal -->
                            <button class="btn btn-link btn-primary" data-toggle="modal" data-target="#exampleModal">
                                Ratings
                            </button>


                        </span>

                    </div>
                    <div class="col-sm-2">
                        <i class="now-ui-icons emoticons_satisfied"></i>
                        <span class="progress-value">
                            
                            @Model.cntRecipeReviewComments

                            <!-- Button trigger modal -->
                            <button class="btn btn-link btn-primary" data-toggle="modal" data-target="#exampleModal">
                                Comment
                            </button>
                        </span>
                    </div>



                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">RECIPE REVIEW & COMMENTS</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">

                                    @foreach (RecipeReviewComment recipeReviewComment in Model.AllRecipeReviewComments)
                                    {
                                        if (Model.Recipe.RecipeId == recipeReviewComment.RecipeId)
                                        {

                                            @foreach (ReviewCommentDetail reviewCommentDetail in Model.AllReviewCommentDetails)
                                            {
                                                if (recipeReviewComment.ReviewCommentId == reviewCommentDetail.ReviewCommentId)
                                                {
                                                    <h6>@reviewCommentDetail.AnonymousId</h6>
                                                    <p>
                                                        
                                                        @if (reviewCommentDetail.Rate == 1) {<p>Ratings  | * @reviewCommentDetail.ReviewDateTime</p>}
                                                        else if (reviewCommentDetail.Rate == 2){<p>Ratings  | ** @reviewCommentDetail.ReviewDateTime</p>}
                                                        else if (reviewCommentDetail.Rate == 3) {<p>Ratings  | *** @reviewCommentDetail.ReviewDateTime</p>}
                                                        else if (reviewCommentDetail.Rate == 4){<p>Ratings  | **** @reviewCommentDetail.ReviewDateTime</p>}
                                                        else if (reviewCommentDetail.Rate == 5){<p>Ratings  | ***** @reviewCommentDetail.ReviewDateTime</p>}
                                                        </p>

                                                        <p>Comment |@reviewCommentDetail.ReviewComment </p>
                                                        
                                                        <hr>
                                                }
                                            }
                                        }

                                    }


 
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                    <a href="/Recipe/CreateUser/@Model.Recipe.RecipeId" class="btn btn-primary">Create New Reviews & Comments</a>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End Modal-->





                </div>
            </div>
            <!-- End of User Ratings -->


                <div class="progress-container">

                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            <span class="progress-value">100%</span>
                        </div>
                    </div>
                </div>

                <h3 class="title">@Model.Recipe.RecipeTitle</h3>

                <div class="progress-container">

                    <div class="progress">
