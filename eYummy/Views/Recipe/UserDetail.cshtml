                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                                <i class="now-ui-icons arrows-1_minimal-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- End Images -->


                        <div class="typography-line">
                            <h6>
                                <span>DESCRIPTION</span>
                                    @Model.Recipe.Description
                                <p></p>
                            </h6>
                        </div>


                        <div class="progress-container">

                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 20%;">
                                    <span class="progress-value">20%</span>
                                </div>
                            </div>
                        </div>

                        <br>

                        <div class="typography-line">
                            <p>
                                <span>INGREDIENTS</span>

                            </p>

                            @foreach (RecipeIngredient recipeIngredient in Model.AllRecipeIngredients)
                            {
                                if (Model.Recipe.RecipeId == recipeIngredient.RecipeId)
                                {

                                    @foreach (IngredientDetail ingredientDetail in Model.AllIngredientDetails)
                                    {
                                        if (recipeIngredient.IngredientId == ingredientDetail.IngredientId)
                                        {

                                            @ingredientDetail.IngredientString
                                            <br>
                                            <br>
                                        }
                                    }
                                }

                            }
                        </div>



                        <div class="progress-container">

                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: foreach;">
                                    <span class="progress-value">40%</span>
                                </div>
                            </div>
                        </div>

                        <br>
