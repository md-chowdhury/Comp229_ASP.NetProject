@model eYummy.Models.ViewModels.RecipeReviewCommentModel






<div class="wrapper">
    <div class="page-header clear-filter page-header-small" filter-color="orange">
        <div class="page-header-image" data-parallax="true" style="background-image:url('../assets/img/index-header.jpg');">
        </div>
        <div class="container">
            <div class="photo-container">
                <img src="../../assets/img/now-logo.png" alt="">
            </div>
            <h3 class="title">NEUAVENUE BEAUTIFUL RECIPE</h3>
            <p class="category">Recipe List</p>
            <div class="content">
                <div class="social-description">
                    <h2>26</h2>
                    <p>Kid-Friendly Recipes</p>
                </div>
                <div class="social-description">
                    <h2>26</h2>
                    <p>Comments</p>
                </div>
            </div>
        </div>
    </div>

    <div class="section">
        <div class="container">
            <div class="button-container">
                <a href="#button" class="btn btn-primary btn-round btn-lg">Follow</a>
                <a href="#button" class="btn btn-default btn-round btn-lg btn-icon" rel="tooltip" title="Follow me on Twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#button" class="btn btn-default btn-round btn-lg btn-icon" rel="tooltip" title="Follow me on Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
            <h3 class="title">Recipe Review & Comment</h3>
            <h5 class="description">
                Kid-Friendly Recipes are inspiration and ideas for kids with Kids's Chicken,
                Pork, Pasta, Beef, Pizza, Vegetable and Fish. We have seasonal food recipes and various ingredient. Furthermore, there are lots of special collections : All recipe Magazine Recipes and Food Wishes with Chef John.
            </h5>




            <!-- RECIPE INSERT -->
            <form asp-action="AddRecipeRivewComment" asp-controller="Recipe" method="post">
                <div class="card-header text-center">
                    <div class="logo-container">
                        <!-- <img src="../../assets/img/now-logo.png" alt="Neuavenue"> -->
                        <input type="hidden" asp-for="@Model.Recipe.RecipeId" />
                        <input type="hidden" asp-for="@Model.ReviewCommentDetail.ReviewDateTime" />
                    </div>
                </div>
                <br>

                <div class="form-group row">
                    <label for="review" class="col-sm-2 col-form-label">Recipe Name</label>
                    <div class="col-sm-10">
                        <textarea class="form-control-plaintext" asp-for="@Model.Recipe.RecipeTitle" rows="1" readonly></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="review" class="col-sm-2 col-form-label">Your Name</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="@Model.ReviewCommentDetail.AnonymousId" rows="1"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="category" class="col-sm-2 col-form-label">Rate</label>
                    <div class="col-sm-10">


                        <div class="form-check form-check-radio">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" asp-for="@Model.ReviewCommentDetail.Rate" id="exampleRadios1" value="1" checked>
                                <span class="form-check-sign"></span>
                                1
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" asp-for="@Model.ReviewCommentDetail.Rate" id="exampleRadios2" value="2">
                                <span class="form-check-sign"></span>
                                2
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" asp-for="@Model.ReviewCommentDetail.Rate" id="exampleRadios3" value="3">
                                <span class="form-check-sign"></span>
                                3
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" asp-for="@Model.ReviewCommentDetail.Rate" id="exampleRadios4" value="4">
                                <span class="form-check-sign"></span>
                                4
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" asp-for="@Model.ReviewCommentDetail.Rate" id="exampleRadios5" value="5">
                                <span class="form-check-sign"></span>
                                5

                            </label>
                        </div>

                    </div>
                </div>
                <!--
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">

                        <textarea class="form-control" id="email" rows="1"></textarea>
                    </div>
                </div>
                -->
                <div class="form-group row">
                    <label for="review" class="col-sm-2 col-form-label">Review</label>
                    <div class="col-sm-10">

                        <textarea class="form-control" asp-for="@Model.ReviewCommentDetail.ReviewComment" rows="5"></textarea>
                    </div>
                </div>
                <!--
                <div class="form-group row">
                    <label for="comment" class="col-sm-2 col-form-label">Comment</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="comment" rows="5"></textarea>
                    </div>
                </div>
                -->

                <hr />

                <div class="card-footer text-center">
                    <button class="btn btn-primary btn-round btn-lg btn-block" type="submit">Save</button>
                    <a tabindex="43" asp-controller="Recipe" asp-action="UserDetail" class="btn cancelButton">Cancel</a>

                </div>
                <br>
            </form>


            <!-- End of RECIPE INSERT-->




        </div>
    </div>


</div>

